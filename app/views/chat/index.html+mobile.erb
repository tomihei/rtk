

<div class="container chat-box">
  <div class="row">
    <div class="backg row3 col-xs-12 col-md-12 col-sm-12">
      <h1 id="headeri"><%= @title  %></h1>
      <ul class="nav nav-pills grey">
        <li id="lnew" class="tnav active" role="presentation"><a >レス順</a></li>
        <li id="ltree" class="tnav" role="presentation"><a >ツリー</a></li>
        <li id="lrnum" class="tnav" role="presentation"><a >レス数</a></li>
        <li id="lforme"class="tnav" role="presentation"><a >返信</a></li>
      </ul>
    </div>
    <div id="group_id" style="display:none;"><%= session[:group_id]%></div>
    <!-- jsに食わせたい情報などなど -->
    <!-- チャットのタイムラインとかテキストボックスとか -->
    <div class="row3 col-xs-12 col-md-12 col-sm-12">
      <div id="chat" style="" data-uri="<%= request.host%>/websocket"></div>


    </div>

    <div class="form-m">
      <div class="closebox">
        <span class="closebutton fa fa-times"></span>
      </div>
       <form class="form-horizontal">
        <div class="form-group">
          <div class="col-sm-12 col-md-12 col-xs-12">
            <textarea  placeholder ="ここへ入力" wrap="hard" rows="5" id="msgbody" class='form-control'></textarea>
          </div>
          <div class="padr col-sm-9 col-md-9 col-xs-8">
            <input type="text" id="imgurl" style="display:none;">
            <input type="file" class="image" id="main">
          </div>
          <div class="padl col-md-3 col-sm-3 col-xs-4">
            <button type="button" class="btn btn-default btn-block btn-lg" id="send">送信</button>
          </div>
        </div>


      </form>
    </div>

    <div class="reform-m">
      <div class="closebox">
        <span class="reshead">返信</span>
        <span class="closebutton fa fa-times"></span>
      </div>
      <form class="form-horizontal">
        <div class="form-group">
          <div class="col-sm-12 col-md-12 col-xs-12">
            <textarea  placeholder ="ここへ入力" wrap="hard" rows="5" class='restext form-control'></textarea>
          </div>
          <div class="padr col-sm-9 col-md-9 col-xs-8">
            <input type="text" class="resimg" style="display:none;">
            <input type="file" class="image" >
          </div>
          <div class="padl col-md-3 col-sm-3 col-xs-4">
            <button type="button" class="btn btn-default btn-block btn-lg resend">送信</button>
          </div>
        </div>


      </form>
    </div>

  <div class="footer-cont">
    <ul class="footer-button">
      <li id="onAutoscl" class="fbtn" style="float:left">
        <div id="autosclimg"  class="autotag">
          <span class="autoword">AUTO</span>
          <span class="autoicon fa fa-arrow-down"></span>
        </div>
      </li>
      <li id="goTop" class="fbtn" style="float:left">
        <div  class="toptag">
          <span class="autoword">TOP</span>
          <span class="autoicon fa fa-arrow-up"></span>
        </div>
      </li>
      <li id="hform" class="fbtn" style="margin-left:100px;">
        <label>
        <span class="fa fa-pencil-square-o" style="vertical-align:middle"></span>
        <span class="fli">書き込み</span>
        </label>
      </li>
    </ul>
  <div class="footer-bottom">aaaaaaaaaa</div>
  </div>
   <div class="visitor-mobile">
       <span class="visit-icon fa fa-user"></span>
       <span id="visitor-num"><%= @visitor %></span>
     <div>
    </div>
</div>
